<% const {field, isGql} = it; %>

@IsOptional({ groups: [CREATE, UPDATE] })
@IsBoolean({ always: true })

<% if (isGql === true) {%>
    @Field(() => Boolean)
<% } %>
<% else {%>
    @Column({ type: 'boolean', default: <%= Boolean(field.default) || false %> })
    <% if (field.index ) {%>
    @Index()
    <% } %>
<% } %>
<%= field.name %>!: <%= field.dataType %>;