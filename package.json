{
  "name": "@mavric/apso-cli",
  "version": "0.0.6",
  "description": "Apso CLI",
  "author": "Mavric Technology - @mavric",
  "bin": {
    "apso": "./bin/run"
  },
  "homepage": "https://github.com/mavric/apso-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mavric/apso-cli.git"
  },
  "publishConfig": {
    "@mavric:registry": "https://npm.pkg.github.com"
  },
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^3",
    "eta": "^2.0.0",
    "pluralize": "^8.0.0",
    "rc": "^1.2.8"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.5",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^20",
    "@types/pluralize": "^0.0.29",
    "@types/rc": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "chai": "^4",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "mocha": "^10",
    "oclif": "^3",
    "prettier": "^2.8.4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5"
  },
  "oclif": {
    "bin": "apso",
    "dirname": "apso",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "scripts": {
    "post-build": "copyfiles -u 1 src/**/*.eta dist/",
    "build": "shx rm -rf dist && tsc -b && npm run post-build",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "format": "prettier \"src/**/*.ts\" --write",
    "pre-build": "npm run format && npm run lint",
    "postpack": "shx rm -f oclif.manifest.json",
    "pack": "oclif pack tarballs",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/nateoaks/apso-cli/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
